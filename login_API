from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware
from pydantic import BaseModel
import json
import os

app = FastAPI()

# CORS 설정
app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

# 학생 정보 저장할 파일
USER_DATA_FILE = 'users.json'

# 처음 실행할 때 users.json 없으면 빈 파일 생성
if not os.path.exists(USER_DATA_FILE):
    with open(USER_DATA_FILE, 'w', encoding='utf-8') as f:
        json.dump({}, f)

# 학생 회원가입 요청 데이터 모델
class SignupRequest(BaseModel):
    nickname: str
    grade: str
    subject: str

# 로그인 요청 데이터 모델
class LoginRequest(BaseModel):
    nickname: str

# 회원가입 API
@app.post("/signup")
def signup(request: SignupRequest):
    nickname = request.nickname.strip()
    grade = request.grade.strip()
    subject = request.subject.strip()

    # 파일 읽기
    with open(USER_DATA_FILE, 'r', encoding='utf-8') as f:
        users = json.load(f)

    if nickname in users:
        return {"success": False, "message": "이미 존재하는 닉네임입니다."}

    # 새 사용자 추가
    users[nickname] = {
        "grade": grade,
        "subject": subject
    }

    # 파일 저장
    with open(USER_DATA_FILE, 'w', encoding='utf-8') as f:
        json.dump(users, f, ensure_ascii=False, indent=4)

    return {"success": True, "message": f"{nickname}님 회원가입 완료"}

# 로그인 API
@app.post("/login")
def login(request: LoginRequest):
    nickname = request.nickname.strip()

    with open(USER_DATA_FILE, 'r', encoding='utf-8') as f:
        users = json.load(f)

    if nickname in users:
        user_info = users[nickname]
        return {
            "success": True,
            "message": f"{nickname}님 로그인 성공",
            "nickname": nickname,
            "grade": user_info["grade"],
            "subject": user_info["subject"]
        }
    else:
        return {"success": False, "message": "존재하지 않는 닉네임입니다."}

